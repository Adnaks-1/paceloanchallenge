{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt --no-cache-dir",
  "excludeFiles": "venv/**|__pycache__/**|*.pyc|.git/**|.env*|*.md|DEPLOYMENT_OPTIMIZATION_PLAN.md"
}

