{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/plglogo.png",
      "dest": "/api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "installCommand": "pip install --upgrade pip setuptools wheel && pip install --no-cache-dir --no-compile -r requirements.txt",
  "buildCommand": "echo 'Build complete'"
}

